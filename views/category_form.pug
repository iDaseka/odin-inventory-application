extends layout 

block content 
    h1= title
    form(method='POST')
        div.form-group
            label(for='name') Name:
            input#name.form-control(type='text' name='name' value=(undefined===item ? '' : item.name) required)
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul 
            for error in errors
                li!= error.msg